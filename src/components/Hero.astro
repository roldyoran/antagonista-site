---
interface Props {
  title: string;
  description: string;
}

const { title, description } = Astro.props;
---

<div class="relative isolate px-6 lg:px-8">
  <div class="mx-auto max-w-3xl py-16 sm:py-28 lg:py-28">
    <div class="text-center">
      <h1 class="text-4xl font-bold tracking-tight text-gray-900 sm:text-6xl">
        {title}
      </h1>
      <p class="mt-6 text-lg leading-8 text-gray-600">
        {description}
      </p>
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a
          href="/personajes"
          class="text-xl uppercase skew-x-[-20deg] font-bold px-8 py-3 border-2 transition-all motion-safe:hover:ease-out border-primary hover:bg-primary hover:text-white"
        >
          Empieza a votar
        </a>
      </div>
    </div>
  </div>
</div>