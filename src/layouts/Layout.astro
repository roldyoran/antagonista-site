---
// import Navigation from '../components/Navigation';
import Nav from "@components/astrojs/Nav.astro";
import {ViewTransitions} from "astro:transitions";

interface Props {
  title: string;
  css: string;
}

const {title, css} = Astro.props;
---

<!doctype html>
<html lang="es" class="dark">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/mascara.svg" />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <meta name="description" content="Elige y vota por tus personajes favoritos. Inicia sesión con tu cuenta de Google, selecciona tus 3 personajes preferidos. Y recuerda que el Orden de Votación Importa" />
    <meta name="keywords" content="antagonista, votaciones, saikomic, manga, mangaplus" />
    <meta name="autor" content="Edgar Alvarez (roldyoran)" />
     
    <meta property="url" content="https://antagonista.site" />
    <meta property="og:title" content="Votaciones Antagonista" />
    <meta property="og:type" content="website" />
    <meta property="og:description" content="Elige y vota por tus personajes favoritos. Inicia sesión con tu cuenta de Google, selecciona tus 3 personajes preferidos. Y recuerda que el Orden de Votación Importa" />
    <meta property="og:image" content="https://antagonista.site/TAGO.webp" />

    <title>{title}</title>
    <ViewTransitions />
  </head>
  <body class={css + " uppercase"}>
    <Nav />
    <main class="mt-16">
      <slot />

        <ul class="circles">
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
          <li></li>
        </ul>
    </main>
    <footer
      class="text-center text-gray-50 py-2 text-xs bg-primary dark:bg-purple-950/95 mt-4 tracking-widest"
    >
      © 2024 Copyright: antagonista.site
    </footer>
  </body>
</html>

<style>
  body {
    font-family: "Exo", sans-serif;
  }

  .circles {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh; /* Ocupa toda la altura de la pantalla */
    overflow: hidden;
    z-index: -50;
    pointer-events: none; /* Evita que interfiera con elementos interactivos */
}


  .circles li {
    position: absolute;
    display: block;
    list-style: none;
    width: 20px;
    height: 20px;
    background: rgba(0, 0, 0, 0.2);
    animation: animate 25s linear infinite;
    bottom: -150px;
  }

  /* Modificar el color de los círculos en modo oscuro */
  .dark .circles li {
    background: rgba(78, 78, 78, 0.151); /* Círculos blancos en modo oscuro */
  }

  .circles li:nth-child(1) {
    left: 25%;
    width: 80px;
    height: 80px;
    animation-delay: 0s;
  }

  .circles li:nth-child(2) {
    left: 10%;
    width: 20px;
    height: 20px;
    animation-delay: 2s;
    animation-duration: 12s;
  }

  .circles li:nth-child(3) {
    left: 70%;
    width: 20px;
    height: 20px;
    animation-delay: 4s;
  }

  .circles li:nth-child(4) {
    left: 40%;
    width: 60px;
    height: 60px;
    animation-delay: 0s;
    animation-duration: 18s;
  }

  .circles li:nth-child(5) {
    left: 65%;
    width: 20px;
    height: 20px;
    animation-delay: 0s;
  }

  .circles li:nth-child(6) {
    left: 75%;
    width: 110px;
    height: 110px;
    animation-delay: 3s;
  }

  .circles li:nth-child(7) {
    left: 35%;
    width: 150px;
    height: 150px;
    animation-delay: 7s;
  }

  .circles li:nth-child(8) {
    left: 50%;
    width: 25px;
    height: 25px;
    animation-delay: 15s;
    animation-duration: 45s;
  }

  .circles li:nth-child(9) {
    left: 20%;
    width: 15px;
    height: 15px;
    animation-delay: 2s;
    animation-duration: 35s;
  }

  .circles li:nth-child(10) {
    left: 85%;
    width: 150px;
    height: 150px;
    animation-delay: 0s;
    animation-duration: 11s;
  }

  @keyframes animate {
    0% {
      transform: translateY(0) rotate(0deg);
      opacity: 1;
      border-radius: 0;
    }

    100% {
      transform: translateY(-1000px) rotate(720deg);
      opacity: 0;
      border-radius: 50%;
    }
  }
</style>
